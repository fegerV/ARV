# Database Configuration
DATABASE_URL=postgresql+asyncpg://vertex_ar:StrongPassword123@postgres:5432/vertex_ar
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Security
SECRET_KEY=change-this-to-a-secure-random-key-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# Storage Configuration
STORAGE_PROVIDER=local
STORAGE_ENABLE_CACHING=true
STORAGE_CACHE_TTL=3600

# Local Storage Configuration
LOCAL_STORAGE_PATH=/app/storage/content
LOCAL_STORAGE_PUBLIC_URL=http://localhost:8000/storage

# MinIO Configuration (if using MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=your-minio-root-user
MINIO_ROOT_PASSWORD=your-minio-root-password
MINIO_BUCKET_NAME=vertex-ar
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

# Yandex Disk Configuration (if using Yandex Disk)
YANDEX_OAUTH_TOKEN=your-yandex-oauth-token
YANDEX_APP_ID=your-yandex-app-id
YANDEX_ROOT_FOLDER=/VertexAR

# Yandex OAuth (for token exchange)
YANDEX_OAUTH_CLIENT_ID=your-yandex-client-id
YANDEX_OAUTH_CLIENT_SECRET=your-yandex-client-secret
YANDEX_OAUTH_REDIRECT_URI=http://localhost:8000/api/oauth/yandex/callback

# Email Notifications
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@vertexar.com
MAIL_FROM_NAME=Vertex AR Platform
MAIL_SERVER=smtp.yandex.ru
MAIL_PORT=465
MAIL_TLS=false
MAIL_SSL=true

# Telegram Notifications
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_ADMIN_CHAT_ID=your-chat-id

# Admin Settings
ADMIN_EMAIL=admin@vertexar.com
ADMIN_DEFAULT_PASSWORD=ChangeMe123!
ADMIN_FRONTEND_URL=http://localhost:3000

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=300

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# Backup Configuration
BACKUP_S3_ENDPOINT=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
BACKUP_S3_BUCKET=vertex-ar-backups
BACKUP_RETENTION_DAYS=30