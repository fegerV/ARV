# Database (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./vertex_ar.db

# Public URL (для QR и ссылок). Если доступ по :8000 — укажите с портом.
PUBLIC_URL=https://ar.neuroimagen.ru:8000

# SSL: сертификаты в папке ssl/
SSL_KEYFILE=ssl/privkey.pem
SSL_CERTFILE=ssl/fullchain.pem

# CORS (опционально): если фронт на другом порту/домене
# CORS_ORIGINS=https://ar.neuroimagen.ru,https://www.neuroimagen.ru

# Media root (local storage)
MEDIA_ROOT=/app/storage/content

# Logging
LOG_LEVEL=INFO
