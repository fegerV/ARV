# Database Configuration
DATABASE_URL=postgresql+asyncpg://vertex_ar:StrongPassword123@postgres:5432/vertex_ar
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Security
SECRET_KEY=change-this-to-a-secure-random-key-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# Storage Configuration
STORAGE_TYPE=local
STORAGE_BASE_PATH=/app/storage/content

# MinIO Configuration (if using MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET_NAME=vertex-ar
MINIO_REGION=us-east-1
MINIO_SECURE=false

# Yandex Disk Configuration (if using Yandex Disk)
YANDEX_DISK_OAUTH_TOKEN=your-yandex-oauth-token
YANDEX_DISK_BASE_PATH=/VertexAR

# Yandex OAuth (for token exchange)
YANDEX_OAUTH_CLIENT_ID=your-yandex-client-id
YANDEX_OAUTH_CLIENT_SECRET=your-yandex-client-secret
YANDEX_OAUTH_REDIRECT_URI=http://localhost:8000/api/oauth/yandex/callback

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@vertexar.com
SMTP_FROM_NAME=Vertex AR Platform

# Telegram Notifications
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_ADMIN_CHAT_ID=your-chat-id

# Admin Settings
ADMIN_EMAIL=admin@vertexar.com
ADMIN_DEFAULT_PASSWORD=ChangeMe123!

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=300

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# Backup Configuration
BACKUP_S3_ENDPOINT=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
BACKUP_S3_BUCKET=vertex-ar-backups
BACKUP_RETENTION_DAYS=30