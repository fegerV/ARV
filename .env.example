# Database Configuration
DATABASE_URL=postgresql+asyncpg://vertex_ar:StrongPassword123@postgres:5432/vertex_ar
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Security
SECRET_KEY=change-this-to-a-secure-random-key-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# Local Storage Configuration (simplified)
LOCAL_STORAGE_PATH=/app/storage/content
LOCAL_STORAGE_PUBLIC_URL=http://localhost:8000/storage

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@vertexar.com
SMTP_FROM_NAME=Vertex AR Platform

# Telegram Notifications
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_ADMIN_CHAT_ID=your-chat-id

# Admin Settings
ADMIN_EMAIL=admin@vertexar.com
ADMIN_DEFAULT_PASSWORD=ChangeMe123!

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=300

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc
