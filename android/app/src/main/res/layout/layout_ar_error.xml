<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ar_background"
    android:padding="32dp">

    <!-- Error icon -->
    <ImageView
        android:id="@+id/icon_ar_error"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_dialog_alert"
        android:contentDescription="@string/error_unknown"
        app:layout_constraintBottom_toTopOf="@id/text_ar_error_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="@color/ar_error_icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/text_ar_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/error_ar_title"
        android:textColor="@color/ar_text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/text_ar_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_ar_error" />

    <!-- Error message (dynamic) -->
    <TextView
        android:id="@+id/text_ar_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/ar_text_body"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/button_ar_error_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_ar_error_title" />

    <!-- Back button -->
    <Button
        android:id="@+id/button_ar_error_back"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:minWidth="160dp"
        android:text="@string/ar_error_go_back"
        app:layout_constraintBottom_toTopOf="@id/button_ar_error_device_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_ar_error" />

    <!-- Optional: open ARCore devices list (shown for device-not-supported) -->
    <Button
        android:id="@+id/button_ar_error_device_list"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:minWidth="160dp"
        android:visibility="gone"
        android:text="@string/button_open_device_list"
        style="?attr/materialButtonOutlinedStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_ar_error_back" />

</androidx.constraintlayout.widget.ConstraintLayout>
