<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/panel_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:minHeight="100dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/portal_ar_logo"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_description"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/button_scan_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scan_qr"
            android:drawableStart="@drawable/ic_qr_code_scanner"
            android:drawablePadding="8dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/button_open_from_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_from_file"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginBottom="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/edit_unique_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/unique_id_hint"
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/button_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open"
            style="?attr/materialButtonOutlinedStyle" />

    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/panel_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_marginBottom="16dp" />
        <TextView
            android:id="@+id/text_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_content_short" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/text_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:minLines="2"
                android:maxLines="10"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                tools:text="Ошибка сети. Проверьте подключение.\n\nОткройте в браузере телефона: https://ar.neuroimagen.ru" />
        </ScrollView>

        <Button
            android:id="@+id/button_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry" />

        <Button
            android:id="@+id/button_open_device_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/button_open_device_list"
            android:visibility="gone"
            style="?attr/materialButtonOutlinedStyle" />
    </LinearLayout>
</FrameLayout>
