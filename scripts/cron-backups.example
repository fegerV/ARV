# /etc/crontab (example)
# Daily PostgreSQL backup at 00:00
0 0 * * * docker-compose -f /path/to/docker-compose.yml run --rm postgres-backup

# Weekly MinIO mirror at 02:00 Monday
0 2 * * 1 docker-compose -f /path/to/docker-compose.yml run --rm minio-backup

# Daily Redis backup at 00:15
15 0 * * * docker-compose -f /path/to/docker-compose.yml run --rm redis-backup

# Daily cleanup of backups older than 30 days
0 3 * * * find /backups -name '*.sql.gz' -mtime +30 -delete
